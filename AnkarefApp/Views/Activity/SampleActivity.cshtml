@{
    ViewData["Title"] = "Activities";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Dashboard</title>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <style>
        .container {
            padding: 20px;
        }

        .recent-activities {
            margin-bottom: 20px;
            background-color: #f8f9fa;
            border-radius: 5px;
            padding: 15px;
        }

        .recent-activities h3 {
            margin-bottom: 15px;
            color: #343a40;
        }

        .recent-activities .item {
            margin-bottom: 15px;
            padding-bottom: 15px;
            border-bottom: 1px solid #dee2e6;
        }

        .recent-activities .item:last-child {
            margin-bottom: 0;
            padding-bottom: 0;
            border-bottom: none;
        }

        .recent-activities .item .date-holder {
            text-align: right;
        }

        .recent-activities .item .date-holder .icon {
            font-size: 24px;
            color: #343a40;
        }

        .recent-activities .item .date-holder .date {
            font-size: 14px;
            color: #6c757d;
        }

        .recent-activities .item .content {
            padding-left: 20px;
        }

        .recent-activities .item h5 {
            margin-bottom: 5px;
            color: #343a40;
        }

        .recent-activities .item p {
            font-size: 14px;
            color: #6c757d;
        }

        
        .add-activity-button {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background-color: orange;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 14px;
            cursor: pointer;
        }
        .text-wrap {
            white-space: pre-wrap;
            word-wrap: break-word;
        }

    </style>
</head>
<body>
<div class="container">
    <div class="row">
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-danger">@ViewBag.Message</div>
        }

        <div class="col-lg-6">
            <div class="recent-activities">
                <div class="card-header">
                    <h3 class="h4">Events</h3>
                </div>
                <div class="card-body no-padding">
                    @foreach (var activity in Model)
                    {
                        <a href="/Activity/ActivityDetail/@activity.Id" class="btn btn-orange">

                            <div class="item">
                                <div class="row">
                                    <div class="col-4 date-holder text-right">
                                        <div class="icon">
                                            <i class="fa fa-clock-o"></i>
                                        </div>
                                        <div class="date">
                                            <span>@activity.Date.ToString("hh:mm tt")</span><br>
                                            <span class="text-info">@activity.Date.ToString("dd/MM/yyyy")</span>
                                        </div>
                                    </div>
                                    <div class="col-8 content text-center">
                                        <h5>@activity.Title</h5>
                                        <p class="text-wrap">@activity.Description</p>
                                    </div>
                                </div>
                            </div>
                        </a>

                        <div style="margin-bottom: 50px;"></div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>


<div class="add-activity-button" onclick="location.href='@Url.Action("ActivityAdd", "Activity")'">
    Add Activity
</div>
</body>
</html>