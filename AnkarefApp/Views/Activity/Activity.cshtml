@using AnkarefApp.Data
@model List<ActivityTable>
<!DOCTYPE html>
<html>
<head>
    <title>Activities</title>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: arial,serif;
        }

        .container {
            justify-content: center;
            display: flex;
            flex-wrap: wrap;  
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 5px;
        }

        .recent-activities {
            margin-bottom: 20px;
        }

        .recent-activities h3 {
            margin-bottom: 15px;
            color: #343a40;
            text-align: center;
        }

        .recent-activities .item {
            display: flex;
            align-items: center; 
            flex: 1 1 300px;
            margin-left:auto;
            margin-right:auto;
            margin-bottom: 15px;
            padding: 10px;
            background-color: #fff;
            border-radius: 5px;
            }

        .recent-activities .item .date-holder {
            flex: 1;
            text-align: right;
            padding-right: 15px;
            color: #6c757d;
        }

        .recent-activities .item .date-holder .icon {
            font-size: 24px;
            color: #343a40;
        }

        .recent-activities .item .content {
            flex: 3;
            padding-left: 20px;
        }

        .recent-activities .item h5 {
            margin-bottom: 10px;
            color: #343a40;
            font-size: 20px;
            word-wrap: break-word;
        }

        .recent-activities .item p {
            font-size: 14px;
            color: #6c757d;
            word-wrap: break-word;
            max-height: 100px; 
            overflow: auto; 
        }

      .add-activity-button {
           position: fixed;
                  bottom: 22px; 
                  right: 61px; 
                  background-color: orange;
                  color: white;
                  padding: 17px 36px;
                  border-radius: 5px;
                  font-size: 14px;
                  cursor: pointer;
                  z-index: 3;
          
      }

       
        .item-content {
            margin: auto;
            max-width: 500px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .item-content h5 {
            text-align: center;
        }

        .item-content p {
            text-align: center;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="recent-activities">
        <h3>Events</h3>
        @*@{
           var sortedModel = Model.OrderBy(activity => activity.Date).ToList();
       }*@
        @foreach (var activity in Model.OrderBy(a => a.Date))
        {
        @*
        @foreach (var activity  in Model)
        {*@

            <a href="/Activity/ActivityDetail/@activity.Id" class="btn btn-orange">
                <div class="item">
                    <div class="row">
                        <div class="col-8 content">
                            <div class="item-content">
                                <h5>@activity.Title</h5>
                                <p>@activity.Description</p>
                            </div>
                        </div>
                        <div class="col-4 date-holder text-right">
                            <div class="icon">
                                <i class="fa fa-clock-o"></i>
                            </div>
                            <div class="date">
                                @*<span>@activity.Date.ToString("hh:mm tt")</span><br>*@
                                <span class="text-info">@activity.Date.ToString("dd/MM/yyyy")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </a>

            <div style="margin-bottom: 30px;"></div>
        }
    </div>
</div>


<div class="add-activity-button" onclick="location.href='@Url.Action("ActivityAdd", "Activity")'">
    Add Activity
</div>
</body>
</html>