@{
    ViewData["Title"] = "Add Activity Category";
}

<h1>Add Activity</h1>

<div class="container">
    <form asp-action="ActivityCategoryAdd" method="post" class="cf">
        <div class="row">
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-success">@ViewBag.Message</div>
            }

            <div class="col-md-6">
                <div class="form-group">
                    <label for="category-name">Title</label>
                    <input type="text" class="form-control" id="category-name" name="categoryName" required>
                </div>
            </div>
        </div>
        <div class="form-group text-right">
            <button type="submit" class="btn btn-orange">Add Activity Category</button>
        </div>

    </form>
</div>
<div class="btn btn-orange" onclick="location.href='@Url.Action("ActivityAdd", "Activity")'">
    Back to Activity
</div>
